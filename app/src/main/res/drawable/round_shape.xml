<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:top="3dp" android:left="2dp" android:height="64dp"
                android:width="64dp">
                <shape android:shape="rectangle">
                    <corners android:radius="32dp" />
                    <gradient android:startColor="#BBBBBB"
                        android:endColor="@color/grayShade"
                        android:angle="315"/>
                </shape>
            </item>
            <item android:right="1dp" android:bottom="1dp" android:height="64dp"
                android:width="64dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/ic_game_utilities_background" />
                    <size android:height="48dp" android:width="64dp" />
                    <corners android:radius="32dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>